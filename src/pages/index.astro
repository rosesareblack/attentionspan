    <!-- Typography Scale Demo -->
    <section class="container mx-auto px-5 md:px-6 lg:px-8 py-12 md:py-16">
      <div class="max-w-4xl mx-auto">
        <Card title="Typography Scale">
          <div class="space-y-6">
            <div>
              <h3 class="text-slate-600 mb-2 font-semibold">Heading 1</h3>
              <h1 class="font-bold text-slate-900">
