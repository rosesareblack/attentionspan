---
interface Props {
  title?: string;
  class?: string;
}

const { title, class: className = '' } = Astro.props;
---

<div class={`bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 p-6 md:p-8 ${className}`}>
  {title && (
    <h3 class="text-[24px] md:text-[28px] lg:text-[32px] font-bold mb-4 text-slate-900">
      {title}
    </h3>
  )}
  <div class="space-y-4">
    <slot />
  </div>
</div>
